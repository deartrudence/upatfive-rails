<p id="notice"><%= notice %></p>

<h1>Listing Portfolio Images</h1>

<table>
  <thead>
    <tr>
      <th>Portfolio piece</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_images.each do |portfolio_image| %>
      <tr>
        <td><%= portfolio_image.portfolio_piece_id %></td>
        <td><%= image_tag portfolio_image.pic.url %></td>
        <td><%= link_to 'Show', portfolio_image %></td>
        <td><%= link_to 'Edit', edit_portfolio_image_path(portfolio_image) %></td>
        <td><%= link_to 'Destroy', portfolio_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

